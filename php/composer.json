{
    "name": "domwebber/algorithms-and-data-structures",
    "description": "Implementations of various algorithms and data structures in various programming languages",
    "type": "project",
    "scripts": {
        "lint": [
            "phpstan analyse",
            "psalm --show-info=true",
            "phpcs"
        ],
        "test": [
            "phpunit --testdox"
        ]
    },
    "suggest": {
        "ext-zend-opcache": "Allows bytecaching for performance boost"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.9",
        "vimeo/psalm": "^4.30",
        "phpunit/php-code-coverage": "^9.2"
    },
    "license": "apache-2.0",
    "autoload": {
        "psr-4": {
            "DomWebber\\AlgorithmsAndDataStructures\\": "php/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DomWebber\\AlgorithmsAndDataStructures\\": "php/tests/"
        }
    },
    "authors": [
        {
            "name": "Dom Webber",
            "email": "dom.webber@hotmail.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
